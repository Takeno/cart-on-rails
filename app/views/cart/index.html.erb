<h1>Cart</h1>

<p id="alert"><%= alert %></p>
<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cartItems.each do |item| %>
      <tr>
        <td><%= link_to item.product.name, showProduct_path(item.product) %></td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Add 1 to quantity', addItemToCart_path(item.product) %> - <%= link_to 'Remove 1 to quantity', subItemToCart_path(item.product) %></td>
      </tr>
    <% end %>
    <% if @cartItems.empty? %>
      <tr>
        <td colspan="4">
          Nessun prodotto nel carrello
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
