<h2><%= @product.name %></h2>


<h5><strong>Description:</strong></h5>
<p><%= @product.description %></p>

<p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

<p><strong>Quantity:</strong> <%= @product.quantity %></p>

<p><strong>Provided by:</strong> <%= @product.providers.map{|p| p.name}.join(', ') %></p>

<%= link_to addItemToCart_path(@product), class: 'btn btn-success' do %>
<span class="glyphicon glyphicon-ok-circle"></span> Add to cart
<% end %>


<%= link_to catalog_path, class: 'btn btn-default' do %>
<span class="glyphicon glyphicon-arrow-left"></span> Back
<% end %>