<p id="notice"><%= notice %></p>

<div>
<table>
	<thead>
		<tr>
			<th>Cliente</th>
			<th>Data Creazione</th>
			<th>Data Evasione</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @order.customer.name %> <%= @order.customer.surname %></td>
			<td><%= @order.created_at.to_formatted_s(:short) %></td>
			<td><% if @order.evaded %><%= @order.updated_at.to_formatted_s(:short) %><% else %> Non Evaso <% end %></td>
		</tr>
	</tbody>
</table>
</div>

