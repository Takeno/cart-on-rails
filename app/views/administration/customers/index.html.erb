<h1>Listing customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Birthdate</th>
      <th>Nickname</th>
      <th>Password</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.surname %></td>
        <td><%= customer.birthdate %></td>
        <td><%= customer.nickname %></td>
        <td><%= customer.password %></td>
        <td>
          <%= customer.address.street %>, 
          <%= customer.address.zipcode %>,
          <%= customer.address.city %>,
          <%= customer.address.state %>,
          <%= customer.address.nation %>
        </td>
        <td>
          <%= link_to [:administration, customer], class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-search"></span> Show
          <% end %>

          <%= link_to edit_administration_customer_path(customer), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span> Edit
          <% end %>

          <%= link_to [:administration, customer], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
          <span class="glyphicon glyphicon-remove"></span> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_administration_customer_path, class: 'btn btn-info' %>
