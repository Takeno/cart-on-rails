<%= form_for([:administration, @customer]) do |f| %>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h4>
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :surname %><br>
        <%= f.text_field :surname, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :birthdate %><br>
        <%= f.datetime_select :birthdate, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :password %><br>
        <%= f.text_field :password, class: 'form-control' %>
    </div>

    <%= f.fields_for :address do |a| %>
        <div class="form-group">
            <%= a.label :street %><br>
            <%= a.text_field :street, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= a.label :city %><br>
            <%= a.text_field :city, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= a.label :state %><br>
            <%= a.text_field :state, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= a.label :nation %><br>
            <%= a.text_field :nation, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= a.label :zipcode %><br>
            <%= a.text_field :zipcode, class: 'form-control' %>
        </div>
    <% end %>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
